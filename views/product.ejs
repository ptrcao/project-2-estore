<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title><%= data4.at(-1) %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/static/font-awesome/css/font-awesome.min.css">

  </head>
  <body>

        <!-- Navbar with Mega Menu -->
        <%- include('./navbar.ejs') %>
        <div class="container-product">
    <% data4.forEach(function(element) { %>
      <div class="product" data-product_id=<%=element.id%>>
        <img class="product-img" src="<%= element.product_image %>">
        <div>
            <h1><%= element.product_name %></h1>
            <p><%= element.description %></p>
            <div class="content-product">
                <p>Price: $<%= element.price %></p>
                <p>Stock: <%= element.stock %></p>
            </div>
          <button class="cart-btn" type="button">Add to Cart</button>
        </div>
      </div>

    
    <% }); %>
  </div>
   
    <script src="/js/cart.js"></script>
  </body>
</html>