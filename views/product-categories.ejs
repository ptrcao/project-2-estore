<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title><%= data2.at(-1); %> Product Categories</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/static/font-awesome/css/font-awesome.min.css">
  </head>
  <body>

    <!-- Navbar with Mega Menu -->
    <%- include('./navbar.ejs') %>

    <h1 class="text-center"><%= data2.at(-1); %></h1>
    <div class="category-container">
      <% data2.forEach(function(element) { %>
        <% if (!element.id) return; %>
        <a href="/product-category/<%=element.id%>">
          <div class="category">
            <div>
              <img src="<%= element.product_category_image %>"  style="width: 100%" />
              <div class="content">
                <h3><%= element.product_category_name %></h3>
              </div>
            </div>
          </div>
        </a>  
      <% }); %>
    </div>

  </body>
</html>