<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Store Home</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/static/font-awesome/css/font-awesome.min.css">

  </head>
  <body>

    <!-- Navbar with Mega Menu -->
    <%- include('./navbar.ejs') %>
    <h1>Store Home</h1>
    
 <!-- In your home.ejs view page: -->
<!-- Gender Departments (M, W, kids, Unisex)
Product Category (T-shirt, Shorts)
Products () -->


<!-- add event listener to grab and return e.target.attribute("data-id") -->

  <% data.forEach(function(element) { %>
    <a href="/product-categories/<%=element.id%>">
      <div class="gender-department-banner card" data-gender_id=<%=element.id%>>
        
        <h2><%= element.product_category_gender_name %></h2>
        <img src="<%= element.product_category_gender_image %>" />

      </div>
    </a>
    <% }); %>

      <script type="application/javascript" src="js/home.js"></script>
  </body>
</html>